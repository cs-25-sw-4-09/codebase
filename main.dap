begin


heart_base: shape = (0,0)--(4,0)--(4,4)--(0,4)--*(|thickness = 2, fill = (128,0,0, 255)|);
heart_top: shape = (0,0)~~(0,2)~~(2,2)--(2,2)~~(4,2)~~(4,0)--*(|thickness = 2, fill = (128,0,0,255)|);

heart: shape = place heart_top top heart_base;
heart = place rotate heart_top by -90 left (0,-2) offset heart;
heart = rotate heart by 45;
draw heart;